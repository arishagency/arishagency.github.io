<h3>List of Pages</h3>
{{#each pages}}
    <div class="page">
        <h4><a href="{{url}}">{{title}}</a></h4>
        <p>{{{excerpt characters=100}}}...</p>
    </div>
{{/each}}
<h3>List of Posts</h3>
{{#each posts}}
    <div class="post">
        <h4><a href="{{url}}">{{title}}</a></h4>
        {{#if date}}
            <p class="post-meta">
                {{date format="MMMM Do YYYY"}}
            </p>
        {{/if}}
        <p>{{{excerpt characters=100}}}...</p>
    </div>
{{/each}}